{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch StayBoost Dev Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@shopify/cli/bin/run",
      "args": ["app", "dev"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Debug Remix App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@remix-run/dev/dist/cli.js",
      "args": ["dev"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Run Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/node",
      "args": ["--test", "--test-reporter", "spec", "tests/**/*.test.js"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "Debug API Endpoint",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    }
  ]
}
